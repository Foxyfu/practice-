<Window x:Class="Приложени_Hello_Name.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Приложени_Hello_Name"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonRun" Content="Сказать имя" HorizontalAlignment="Left" Margin="39,321,0,0" VerticalAlignment="Top" FontSize="22" Height="79" Width="203" Click="ButtonRun_Click"/>
        <Button x:Name="ButtonClose" Content="Закрыть" HorizontalAlignment="Left" Margin="513,321,0,0" VerticalAlignment="Top" FontSize="22" Height="79" Width="203"/>
        <Button x:Name="ButtonAbout" Content="Справка" HorizontalAlignment="Left" Margin="513,53,0,0" VerticalAlignment="Top" FontSize="22" Height="79" Width="203" Click="ButtonAbout_Click"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Margin="292,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontSize="20" Text="Введите имя"/>
        <TextBlock x:Name="TextBlockName" HorizontalAlignment="Left" Margin="292,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
